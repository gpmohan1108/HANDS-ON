        Console.WriteLine("\n7.print number with space and without space in four rows\n");
        int numb;

        Console.WriteLine("Enter a digit: ");
        numb = Convert.ToInt32(Console.ReadLine());


        Console.Write(numb);
        Console.Write(" ");
        Console.Write(numb);
        Console.Write(" ");
        Console.Write(numb);
        Console.Write(" ");
        Console.Write(numb);
        Console.WriteLine();

        Console.Write(numb);
        Console.Write(numb);
        Console.Write(numb);
        Console.WriteLine(numb);
        Console.WriteLine();


        Console.WriteLine("{0} {0} {0} {0}", numb);
        Console.WriteLine("{0}{0}{0}{0}", numb);

