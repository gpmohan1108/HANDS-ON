        int no2 = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine("{0} + {1} = {2}", no1, no2, no1 + no2);
        Console.WriteLine("{0} - {1} = {2}", no1, no2, no1 - no2);
        Console.WriteLine("{0} x {1} = {2}", no1, no2, no1 * no2);
        Console.WriteLine("{0} / {1} = {2}", no1, no2, no1 / no2);
        Console.WriteLine("{0} mod {1} = {2}", no1, no2, no1 % no2);

        //4.average

